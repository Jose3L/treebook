<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
		<div class="container">
    			<a class="navbar-brand" href="#">TreeBook</a>
    			<ul class="nav navbar-nav">
    				<li><%= link_to "All Statuses", feed_path %></li>
    			</ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to current_user.full_name, edit_user_registration_path %></li>
              <li><%= link_to "Log Out", logout_path %></li>
            <% else %>
              <li><%= link_to "Registration", register_path %></li>
              <li><%= link_to "Log In", login_path %></li>
            <% end %>
          </ul>
    		</div>
    	</div>
	</nav>

	<div class="container">
    <% if flash.each do |type, message| %>
      <div class="alert <%= flash_class type %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert">
          <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
        </button>
        <%= message %>
      </div>
    <% end %>
    <% end %>

		<%= yield %>

	</div>
</body>
</html>
